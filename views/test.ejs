<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Test on CodeQuestions</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="js/jquery-3.4.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <% if(data.name){ %>
        <div class="text-white w-100 bg-dark p-2 text-center mb-2">Welcome <%= data.name %></div>

        <% data.questions.forEach(question => { %>
        <form action="" class="quizform" id="<%= question._id %>">
            <div class="bg-dark text-white p-5 mb-2">
                <h4><%= question.description %></h4>
                <div class="form-group">
                    <input type="radio" value="<%= question.option1 %>" name="option"> <%= question.option1 %>
                </div>
                <div class="form-group">
                    <input type="radio" value="<%= question.option2 %>" name="option"> <%= question.option2 %>
                </div>
                <div class="form-group">
                    <input type="radio" value="<%= question.option3 %>" name="option"> <%= question.option3 %>
                </div>
                <div class="form-group">
                    <input type="radio" value="<%= question.option4 %>" name="option"> <%= question.option4 %>
                </div>
                <input type="submit" class="btn btn-success" value="submit">
            </div>
        </form>
        <% }) %>


        <% } else { %>
        <h1 class="text-white">Wellcome to CodeQuestions</h1>
        <h4 class="text-white">Login to access Test</h4>
        <a href="/login"> <button class="btn btn-warning text-white py-1 px-2">Login</button></a>
        <a href="/signup"><button class="btn btn-warning text-white py-1 px-2">Sign Up</button></a>
        <% } %>
    </div>
    <script src="js/test.js"></script>
</body>

</html>